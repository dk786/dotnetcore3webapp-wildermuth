@{
    ViewBag.Title = "Welcome to Dutch Treat";
}
<html>

<head>
    <title>Dutch Treat: @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css">

</head>
<body>
    <header>Hello there.</header>
    <menu>
        <ul>
            <li><a asp-controller="app" asp-action="index">Home</a></li>
            <li><a asp-controller="app" asp-action="contact">Contact us</a></li>
            <li><a asp-controller="app" asp-action="aboutus">About us</a></li>
        </ul>
    </menu>

    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()<!-- inserts the relevant view body html here-->
    </section>
    <footer>Copyright 2020 DK LLC</footer>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/index.js"></script>

</html>