@{
ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-9">

        <div class="product-info">
            <img src="~/img/VanGough.jpg" />
            <h3>Mug</h3>
            <ul class="product-props">
                <li>Price: &#163 9.99</li>
                <li>Artist: Van Gough</li>
                <li>Title: Van Gough Mug</li>
                <li>Description: Mug with his mug on it</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>

        </div>
        <br>
        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username:</label>
                    <br />
                    <input type="text" />
                </div>
                <div>
                    <label>Password:</label>
                    <br />
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox">
                    <label>Remember me</label>
                </div>
                <input type="submit" value="Submit" />
            </form>
        </div>


    </div>
    <div class="col-md-3">
        <p>This is the second half of the page.</p>
    </div>
</div>